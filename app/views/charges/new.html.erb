<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Montant: 5.00 €</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Un mois d’abonnement !"
          data-amount="500"
          data-locale="auto"></script>
<% end %>


<h2>Merci ! Vous venez de payer <strong>5.00 €</strong> pour faire fondre votre graisse !</h2>
