<div style="background: url('<%= asset_path 'fheight1.png' %>')no-repeat; height: 100%;">

  <div class="container" style="margin-left: 30%">
    <div class="row pb30 align-items-end" style="margin-left: 10%;">
      <div class="col-lg-4 ml-md-auto col-md-6 col-sm-6 mb20" style="margin-top: 10%">
        <h2 class="text-black text-left mb30" style="width: 100%;">Rejoindre Stratton</h2>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="block" style="margin-left: 0%;">


          <div class="form-group">
            <div class="field">
              <i class="fa fa-user"></i>
              <%= f.label :Nom %><br />
              <%= f.text_field :first_name, autofocus: true, autocomplete: "nom" %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <i class="fa fa-user"></i>
              <%= f.label :Prénom %><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "prenom" %>
            </div>                
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :Email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <i class="fa fa-lock"></i>
              <%= f.label :Mot_de_passe %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>                
          </div>

          <div class="form-group">
            <div class="field">
              <i class="fa fa-lock"></i>
              <%= f.label :Confirmation_du_mot_de_passe %><br />
              <%= f.password_field :password_confirmation %>
            </div>          
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :Téléphone %><br />
              <%= f.text_field :phone, autocomplete: "07..." %>
            </div>          
          </div>
          <hr>


        </div>

        
        <div>
          <%= f.submit "s'enregistrer", class: 'btn btn-black-outline btn-block' %>
          <hr>
        </div>               
        <% end %>


        <div class="text-center text-black-gray">Vous avez deja un compte chez nous ?  <br> Connectez vous ci-dessous</div>
        
        <div>

          <a href="new_user_session_path" class="btn btn-black-outline btn-block">Connexion</a>
        </div>
      </form>
    </div>
    <div class="col-lg-4 col-md-6 col-sm-6 mb20">
    </div>
  </div>
</div>
</div>
