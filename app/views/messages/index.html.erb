<p id="notice" style="margin-top: 10%"> <% notice %></p>

<div class="display_mess">
  <h1>Messages</h1>
  <table>
    <thead>
      <tr>

        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
      <tr>
        <% if message.user_id == current_user.id %>

        <td><%= message.content %></td>
        
        <% @users.each do |he| %>
        <% if he.admin == true %>
        <% messages_admin = he.messages %>
        <% messages_admin.each do |it| %>
        <%= it.content %>

        <% end %>
        <% end %>
        <% end %>
        



        <td><%= link_to 'Supprimer', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <% end %>
        
        
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="form_mess">
  <%= form_with(model: @message, local: true) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: 'message_tag' %>


    <div class="actions">
      <%= form.submit %>
    </div>
    <% end %>
  </div>
</div>
